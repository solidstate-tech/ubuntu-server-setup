# deployment-ready-ubuntu configuration
# Copy this file to .env and fill in the required values:
#   cp .env.example .env

# ============================================================================
# REQUIRED
# ============================================================================

# Name of the non-root deploy user to create
DEPLOY_USER=deploy

# SSH public key for the deploy user (paste the full key)
DEPLOY_SSH_PUBLIC_KEY="ssh-ed25519 AAAA... user@host"

# Email for Let's Encrypt certificate notifications
ACME_EMAIL=admin@example.com

# Primary domain for the server
DOMAIN=example.com

# ============================================================================
# OPTIONAL
# ============================================================================

# Server timezone (default: UTC)
TIMEZONE=UTC

# Disable snapd service (true/false, default: false)
DISABLE_SNAPD=false

# Number of days to retain local backups (default: 7)
BACKUP_RETENTION_DAYS=7

# Cron schedule for daily backups (default: 3:00 AM)
BACKUP_CRON_TIME="0 3 * * *"

# Email for unattended-upgrades notifications (leave empty to disable)
NOTIFICATION_EMAIL=
